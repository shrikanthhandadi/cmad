pipeline{
    
    agent none
    
    stages{
        stage('build'){
		    agent{
		          docker{
		            image 'gradle:5.5.0-jdk8'
		            args '-v $HOME/.gradle:/root/.gradle'
		          }

		    }
            steps{
                echo 'Building worker app'
                dir('worker'){
					sh 'gradle build -x test'
				}
            }
        }
        stage('test'){
		    agent{
		          docker{
		            image 'gradle:5.5.0-jdk8'
		            args '-v $HOME/.gradle:/root/.gradle'
		          }

		    }
            steps{
                echo 'Running unit tests on worker app'
                dir('worker'){
					sh 'gradle build -x test'
				}
            }
        }
        stage('package'){
			when { branch "master"}
		    agent{
		          docker{
		            image 'gradle:5.5.0-jdk8'
		            args '-v $HOME/.gradle:/root/.gradle'
		          }

		    }
            steps{
                echo 'Running package worker app'
                dir('worker'){
					sh 'gradle bootJar -x test'
					archiveArtifacts artifacts: '**/build/*.jar', fingerprint: true
				}
            }
        }
		
		stage('docker-package'){
			when { branch "master"}
		          agent any
		          steps{
		            echo 'Packaging worker app with docker'
		            script{
		              docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
		                  def workerImage = docker.build("shrikanthhandadi/connected-car-service:v${env.BUILD_ID}", "./connected-car-service:")
		                  workerImage.push()
		                  workerImage.push("latest")
		              }
		            }
		          }
		      }
			  
	  		stage('deploy'){
				when { branch "master"}
	  		          agent any
	  		          steps{
	  		            script{
	  		              echo 'Deploy (deliver) docker app'
						  sh 'docker-compose up -d'
	  		            }
	  		          }
	  		      }
			  
			  
    }
    
    post{
        always{
            echo 'In the post block of pipeline'
        }
        
    }
    
}
